# Phase 3B Infrastructure Configuration
# Copy this file to .env and fill in values for your environment

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Kitbash Core Configuration
KITBASH_ENVIRONMENT=development  # development, staging, production
KITBASH_LOG_LEVEL=INFO           # DEBUG, INFO, WARNING, ERROR
KITBASH_CONFIG_PATH=./kitbash_config.yaml

# Layer Timeouts (milliseconds)
LAYER0_TIMEOUT_MS=10
LAYER1_TIMEOUT_MS=10
LAYER2_TIMEOUT_MS=100
LAYER3_TIMEOUT_MS=500
LAYER4_TIMEOUT_MS=2000

# Subprocess Configuration
BITNET_HOST=localhost
BITNET_PORT=5001
BITNET_ENABLED=true

CARTRIDGE_HOST=localhost
CARTRIDGE_PORT=5002
CARTRIDGE_ENABLED=true

KOBOLD_HOST=localhost
KOBOLD_PORT=5003
KOBOLD_ENABLED=false  # Enable when LLM backend is ready

# Diagnostic & Logging
DIAGNOSTIC_REDIS_ENABLED=true
DIAGNOSTIC_LOG_RETENTION_DAYS=7
METRIC_COLLECTION_ENABLED=true

# Performance Tuning
GRAIN_CACHE_SIZE=1000
CARTRIDGE_CACHE_SIZE=100
CONSENSUS_CONFIDENCE_THRESHOLD=0.85
ESCALATION_CONFIDENCE_THRESHOLD=0.60

# Docker Specific (for containerized deployment)
DOCKER_NETWORK=kitbash_network
DOCKER_COMPOSE_PROJECT=kitbash_phase3b
